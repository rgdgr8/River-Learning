<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sr"
        android:gravity="start"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/task"
        android:gravity="start"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/allocTo"
        android:gravity="start"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/allocD"
        android:gravity="start"
        android:layout_width="175dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/targetD"
        android:gravity="start"
        android:layout_width="175dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/status"
        android:gravity="start"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/edit_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_edit_white" />

        <ImageButton
            android:id="@+id/del_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_delete_white_24" />

        <ImageButton
            android:id="@+id/comm_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baselin_comment_white_24" />
    </LinearLayout>
</LinearLayout>